@{
    ViewData["Title"] = "Anasayfa";
}
<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

<div class="jumbotron text-center d-flex align-items-center justify-content-center" style="background-image: url('/Img/anasayfa.jpg'); ">
</div>


<div class="container p-5 rounded" style="max-width: 1920px;">
    <div class="video-container position-relative mb-4">
        <video autoplay muted loop class="video-content">
            <source src="/Img/anasayfaVideo.mp4" type="video/mp4">
            Tarayıcınız video etiketini desteklemiyor.
        </video>
        <div class="overlay position-absolute w-100 h-100 top-0 start-0 d-flex align-items-center justify-content-center">
            <div class="overlay-header position-absolute top-0 start-0 m-3">
                <h2 class="text-white">Nasıl Çalışıyoruz</h2>
            </div>
            <div class="overlay-content text-center">
                <div class="container">
                    <div class="row text-dark">
                        <div class="col-md-4 mb-4">
                            <i class="fas fa-layer-group fa-5x mb-2" style="color: #000;"></i>
                            <h5>KATEGORİ SEÇİN</h5>
                            <p><span class="italik-yazi"><strong>Çeşitli kahve kategorilerimizden dilediğinizi seçin.</strong></span></p>
                        </div>
                        <div class="col-md-4 mb-4">
                            <i class="fas fa-box fa-5x mb-2" style="color: #000;"></i>
                            <h5>ABONELİK PLANINIZI SEÇİN</h5>
                            <p><span class="italik-yazi"><b>Size en uygun abonelik planını belirleyin.</b></span></p>
                        </div>
                        <div class="col-md-4 mb-4">
                            <i class="fas fa-truck fa-5x mb-2" style="color: #000;"></i>
                            <h5>HER AY KAPINIZA GETİRELİM</h5>
                            <p><span class="italik-yazi"><b>Seçtiğiniz ürünler her ay kapınıza gelsin.</b></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<style>
    .jumbotron {
        justify-content: space-between;
        display: flex;
        margin-top: 30px;
        background-size: cover;
        background-position: center;
        height: 100vh;
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
    }

    .video-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        object-fit: cover;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3); 
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .overlay-content .container {
        background-color: rgba(255, 255, 255, 0.4); 
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3); 
    }

    .italik-yazi {
        font-style: italic;
        font-size: 15px;
    }

    .container.bg-dark {
        background-color: rgba(0, 0, 0, 0.5) !important;
    }

    .overlay-header {
        position: absolute;
        top: 0;
        left: 0;
        padding: 10px;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 0 0 5px 0;
    }

        .overlay-header h2 {
            margin: 0;
            padding: 5px 10px;
            font-size: 1.5rem;
        }
</style>
