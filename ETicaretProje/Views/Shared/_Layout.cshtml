<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Paket Dünyası</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETicaretProje.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="bd-example">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="">Paket Dünyası</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" disabled>
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Kategoriler" asp-action="Categories">Kategoriler</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        @if(Context.User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Index">Hesabım</a>
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Logout">Oturumu Kapat</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Giriş</a>
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Register">Kaydol</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </div>
        
    <div class="container">
        @Html.Raw(TempData["Message"])
        <main role="main" class="pb-3">
             @RenderBody() 
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
